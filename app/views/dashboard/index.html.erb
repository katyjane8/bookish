<div class="col col-6 px2">
    <h2>Your Goodreads Queue: </h2>
    <ul>
    <% @book_info.each do |book| %>
    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
      <div class="flipper">
        <div class="front">
          <%= image_tag book.image_url %><br>
        </div>
        <div class="back">
            <%= book.isbn %><br>
            <%= book.title %><br>
          <% end %>
        </div>
      </div>
    </div>
    </ul>
</div>
<div class="col col-6 px2">
  <h2>NYT BESTSELLERS</h2>
  <% @nyt_reviews.each do |review| %>
    List Name: <%= review.list_name %><br>
    Bestseller Date: <%= review.bestsellers_date %><br>
    Published Date: <%= review.published_date %><br>
    Rank: <%= review.rank %><br>
    Weeks on the List: <%= review.weeks_on_list %><br>
    ISBN: <%= review.isbns %><br>
    Book Deets: <%= review.book_details %><br>
  <% end  %>

  <h2>Map to Bookstores</h2>
  <iframe width="700"
    height="500" frameborder="0" style="border:0"
    src= "<%= "https://www.google.com/maps/embed/v1/search?key=#{ENV["GOOGLE_MAP_KEY"]}&q=book+stores+in+Denver" %>" allowfullscreen>
  </iframe>

</div>
